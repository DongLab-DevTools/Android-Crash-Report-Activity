<resources>
    <!-- ========================================== -->
    <!--      New Theme for CrashActivity           -->
    <!-- ========================================== -->
    <style name="Theme.CrashActivity" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/gemini_primary</item>
        <item name="colorOnPrimary">@color/gemini_on_primary</item>
        <item name="android:colorBackground">@color/gemini_background</item>
        <item name="colorOnBackground">@color/gemini_on_background</item>
        <item name="colorSurface">@color/gemini_surface</item>
        <item name="colorOnSurface">@color/gemini_on_surface</item>
        <item name="colorSurfaceVariant">@color/gemini_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/gemini_on_surface_variant</item>
        <item name="colorOutline">@color/gemini_outline</item>
        <item name="android:textColorSecondary">@color/gemini_on_surface_variant</item>
        <item name="android:fontFamily">@font/product_sans</item>

        <!-- Set status bar and navigation bar colors -->
        <item name="android:statusBarColor">@color/gemini_background</item>
        <item name="android:navigationBarColor">@color/gemini_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <!-- ========================================== -->
    <!--         New Material3 Button Styles        -->
    <!-- ========================================== -->
    <style name="Gemini.Button.Main" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/gemini_button_main_background</item>
        <item name="android:textColor">@color/gemini_button_secondary_text</item>
        <item name="android:textAppearance">?attr/textAppearanceLabelLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Gemini.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@color/gemini_button_secondary_background</item>
        <item name="strokeColor">@color/gemini_button_secondary_border</item>
        <item name="android:textColor">@color/gemini_button_secondary_text</item>
        <item name="android:textAppearance">?attr/textAppearanceLabelLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

</resources>